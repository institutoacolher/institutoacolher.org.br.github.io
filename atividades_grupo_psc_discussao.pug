block main
  -
    var atividades = [
      {
        "mes": "Março",
        "eventos": [
          { "dia": "08 – Terça", "descricao": "Religiosas(os)" },
          { "dia": "15 – Terça", "descricao": "Religiosas(os)" },
          { "dia": "22 – Terça", "descricao": "Religiosas(os)" }
        ]
      },
      {
        "mes": "Abril",
        "eventos": [
          { "dia": "05 – Terça", "descricao": "Leigos" },
          { "dia": "19 – Terça", "descricao": "Leigos" },
          { "dia": "26 – Terça", "descricao": "Leigos" }
        ]
      },
      {
        "mes": "Maio",
        "eventos": [
          { "dia": "10 – Terça", "descricao": "Padres/Religiosas(os)" },
          { "dia": "17 – Terça", "descricao": "Padres/Religiosas(os)" },
