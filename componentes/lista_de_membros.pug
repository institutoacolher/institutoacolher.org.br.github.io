include membros
ul.collection
  each membro in membros
    if membro.grupo == grupo
      - var avatar = membro.avatar
      unless membro.avatar
        if membro.masculino
          - avatar = "img/membro-masculino.jpg"
        else
          - avatar = "img/membro-feminino.jpg"
      li.collection-item.avatar
        a(href=membro.slug + ".html")
          img.circle(src=avatar,alt=membro.nome)
        p.membro-nome
          a(href=membro.slug + ".html")= membro.nome
        p.orange-text.membro-titulo= membro.titulo
