h2 Opção 1
//- Os serviços serão exibidos como cartões
.row
  each servico in servicos
    .col.s12.m6.xl4
      .card.small.light-grey.darken-1.wow.animate__animated.animate__bounceInUp
        .card-image.waves-effect.waves-block.waves-light
          if servico.imagem
            img.activator(src=servico.imagem)
          else
            img.activator(src='img/servico-generico.jpg')
        .card-content.black-text
          span.activator.card-title.grey-text.text-darken-4= servico.titulo
            i.material-icons.right more_vert
          a(href=servico.url) Acessar
        .card-reveal
          span.card-title.grey-text.text-darken-4= servico.titulo
            i.material-icons.right close
          p.servico-descricao= servico.descricao
          a(href=servico.url) Acessar

