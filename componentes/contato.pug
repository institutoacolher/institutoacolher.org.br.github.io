include vars
-
  var logradouro       = "Rua Prof. José Cucé, 125, 04055-070"
  var bairro           = "Saúde - São Paulo/SP"
  var fone             = "(11) 4371-0935"
  var whatsapp         = "(11) 9 4522-7267"
  var whatsappNumber   = "5511945227267"
  var whatsappMensagem = "Olá,+gostaria+de+saber+mais+informações+sobre+os+serviços+do+ITA"
  var email            = "acolher_ita@outlook.com"
  var horarioAtendimento = "Das 10h às 16h"
  var diasAtendimento  = "De segunda a sexta-feira"

h3= contato

ul.contato
  li
    i.fa.fa-street-view
    a.white-text(href="localizacao.html")= verNoMapa
  li
    i.fa.fa-map
    span.logradouro= logradouro
    br
    span.bairro= bairro
  li
    i.fa.fa-phone
    a.white-text(href="tel:"+fone)= fone
  li
    i.fa.fa-whatsapp
    span
      a.white-text(target="_blank",href="https://api.whatsapp.com/send?phone=" + whatsappNumber + "&text=" + whatsappMensagem)= whatsapp
  li
    i.fa.fa-at
    span
      a.white-text(href="mailto:" + email)= email
  li
    i.fa.fa-clock-o
    span= horarioAtendimento
  li
    i.fa.fa-calendar
    span= diasAtendimento

